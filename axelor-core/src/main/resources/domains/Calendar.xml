<?xml version="1.0" ?>
<domain-models xmlns="http://axelor.com/xml/ns/domain-models"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://axelor.com/xml/ns/domain-models http://axelor.com/xml/ns/domain-models/domain-models_4.0.xsd">

  <module name="ical" package="com.axelor.ical.db" />

  <entity name="ICalendar" table="ICAL_CALENDAR" sequential="true">
    <string name="name" required="true" title="Display Name" />
    <string name="cid" required="true" />
    <boolean name="keepRemote" default="true" help="Keep remote values when syncing."/>
    <one-to-many name="events" ref="ICalendarEvent" mappedBy="calendar" />
  </entity>

  <entity name="ICalendarEvent" table="ICAL_EVENT" sequential="true">
    <string name="uid" column="calendar_uid" unique="true" hashKey="true"/>
    <string name="url" />
    <string name="summary" required="true" />
    <string name="description" />
    <string name="status" />
    <datetime name="startDate" required="true" />
    <datetime name="endDate" />
    <boolean name="allDay" />
    <string name="location" />
    <string name="geo" help="Geographic latitude and longitude"/>
    <many-to-one name="calendar" ref="ICalendar" />
    <many-to-one name="organizer" ref="ICalendarUser" />
    <many-to-many name="attendees" ref="ICalendarUser" />
    <finder-method name="findByUid" using="uid" />
  </entity>

  <entity name="ICalendarUser" table="ICAL_USER" sequential="true">
    <string name="name" initParam="false" />
    <string name="email" required="true" unique="true" initParam="true" />
    <finder-method name="findByEmail" using="email" />
  </entity>

</domain-models>
